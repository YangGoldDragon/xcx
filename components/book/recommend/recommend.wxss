/* components/book/recommend/recommend.wxss */

.recommend-container {
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.title {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.recommend-per {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.recommend-per-image {
  width: 300rpx;
}

.recommend-per-name {
  font-size: 12px;
  max-width: 250rpx;
  padding: 10rpx 20rpx;
}

.recommend-per-price {
  font-size: 14px;
  max-width: 250rpx;
  padding: 0 20rpx;
}
