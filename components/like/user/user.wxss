/* components/like/user/user.wxss */

.user-container {
  width: 100%;
  position: relative;
}

.mybg {
  display: flex;
  width: 100%;
}

.about {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 30rpx;
  left: 0;
}

.about-bar, .collection-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.about-bar-image {
  margin-bottom: 10rpx;
  width: 34rpx;
}

.collection-num {
  margin-bottom: 10rpx;
}

.button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: 250rpx;
  left: 315rpx;
  padding: 0 !important;
  border: none !important;
}

.button-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.button-text {
  position: absolute;
  top: 400rpx;
  left: 0;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
